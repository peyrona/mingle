DEVICE MessagesPerMinute
    DRIVER SystemMonitorDriver
        CONFIG
            metric   SET "mpm"
            interval SET 5s

DEVICE MessagesPending
    DRIVER SystemMonitorDriver
        CONFIG
            metric   SET "pending"
            interval SET 5s

DEVICE console
    DRIVER OutputDriver

WHEN MessagesPerMinute ABOVE 0    # This will be always true
THEN console SET "MPM = " + MessagesPerMinute + ", Pending = " + MessagesPending


