WHEN clock ABOVE 0
THEN TTS SET "Time is " + time():hour()   + " hours, " \
                        + time():minute() + " minutes and " \
                        + time():second() + " seconds"

# ---------------------------------------------------------------------------------------------------------------------------------

DEVICE clock
    DRIVER ClockDriver
        CONFIG
            interval SET 30s


DEVICE TTS
    DRIVER SunFreeTTSDriver

