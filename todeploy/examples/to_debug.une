DEVICE CPU_Sum
    DRIVER CellSetDriver
        CONFIG
            value = 0

DEVICE CPU
    DRIVER SystemMonitorDriver
        CONFIG
            metric   = "cpu"
            interval = 5s

DEVICE Disk
    DRIVER SystemMonitorDriver
        CONFIG
            metric   = "disk"
            interval = 1m

DEVICE console
	DRIVER OutputDriver

WHEN Disk >= 0
THEN CPU_Sum = 0

WHEN CPU >= 0
THEN CPU_Sum = CPU_Sum + CPU